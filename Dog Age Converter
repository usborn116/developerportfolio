//setting age variable
let myAge = 28
//early years converting to Dog Years
let earlyYears = 2
earlyYears = earlyYears * 10.5
//accounting for first two early years
let laterYears = myAge - 2
//converting to dog years
laterYears *= 4
console.log(earlyYears, laterYears)
//new age in dog years
let myAgeInDogYears = earlyYears + laterYears
//setting name in all lowercase
myName = 'Usborn'.toLowerCase()
//logging a sentence to explain my age in both types of years
console.log('My name is '+myName+'. I am '+myAge+' years old in human years which is '+myAgeInDogYears+' years old in dog years.')
